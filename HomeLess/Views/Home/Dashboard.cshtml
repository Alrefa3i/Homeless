<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <h3>Admin Panel</h3>
            <ul class="nav">
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Users</a></li>
                <li><a href="#">Settings</a></li>
                <li><a href="#">Reports</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Navbar -->
            <div class="navbar">
                <button id="menu-toggle">â˜°</button>
                <div class="search-bar">
                    <input type="text" placeholder="Search...">
                    <button>Search</button>
                </div>
            </div>

            <div class="content">
                <h1>Dashboard</h1>
                
                <!-- Summary Cards -->
                <div class="card-container">
                    <div class="card">
                        <h4>Total Users</h4>
                        <p>1,024</p>
                    </div>
                    <div class="card">
                        <h4>Sales</h4>
                        <p>$5,230</p>
                    </div>
                    <div class="card">
                        <h4>Orders</h4>
                        <p>178</p>
                    </div>
                    <div class="card">
                        <h4>Issues</h4>
                        <p>10</p>
                    </div>
                </div>
                
                <!-- Data Table -->
                <div class="table-container">
                    <h2>Recent Orders</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#001</td>
                                <td>Product A</td>
                                <td>2</td>
                                <td>Completed</td>
                            </tr>
                            <tr>
                                <td>#002</td>
                                <td>Product B</td>
                                <td>1</td>
                                <td>Pending</td>
                            </tr>
                            <tr>
                                <td>#003</td>
                                <td>Product C</td>
                                <td>5</td>
                                <td>Shipped</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>
